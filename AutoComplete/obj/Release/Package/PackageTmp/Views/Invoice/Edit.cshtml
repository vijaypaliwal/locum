            @Html.EditorFor(model => model.startDate)
            @Html.ValidationMessageFor(model => model.startDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.endDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.endDate)
            @Html.ValidationMessageFor(model => model.endDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsPensionFormAinclude)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsPensionFormAinclude)
            @Html.ValidationMessageFor(model => model.IsPensionFormAinclude)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.InvoicedDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.InvoicedDate)
            @Html.ValidationMessageFor(model => model.InvoicedDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PaidDate)
        </div>
