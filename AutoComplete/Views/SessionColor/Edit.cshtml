@model AutoComplete.Models.SessionColor

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Your Session Color</h2>



@section bottomText
{
 <div class="page">
        <div class="grid">
            <div class="row">
                <div class="span4 bg-color-blue">
                    <img src="@Url.Content("~/img/simple.png")" class="place-right" style="margin: 10px;">
                    <h2 class="fg-color-white">
                        &nbsp;Simple</h2>
                </div>
                <div class="span4 bg-color-green">
                    <img src="@Url.Content("~/img/manageable.png")" class="place-right" style="margin: 10px;">
                    <h2 class="fg-color-white">
                        &nbsp;Manageable</h2>
                </div>
                <div class="span4 bg-color-yellow">
                    <img src="@Url.Content("~/img/custom.png")" class="place-right" style="margin: 10px;">
                    <h2 class="fg-color-white">
                        &nbsp;Customaziable</h2>
                </div>
            </div>
        </div>
    </div>
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
      

        @Html.HiddenFor(model => model.ID)


        <div class="editor-label">
            @Html.LabelFor(model => model.SID, "Sessions")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SID", String.Empty)
            @Html.ValidationMessageFor(model => model.SID)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.Color)
        </div>

        
        <div class="editor-field">
       <input  style="height:70px; width:100px;" type="color" name="Color" id="Color" value="@Html.DisplayFor(model=>model.Color)" />
            @Html.ValidationMessageFor(model => model.Color)
        </div>

        

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}


 <script type="text/javascript">
     $(document).ready(function () {

         $("select").kendoDropDownList();
     });

</script>