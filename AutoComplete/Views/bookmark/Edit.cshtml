@model AutoComplete.Models.bookmarks
@{
    ViewBag.Title = "EDIT";
    Layout = null;
}

<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>



@using (Ajax.BeginForm("Edit", "bookmark", null,
        new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST",
            OnSuccess = "updateSuccess"
        }, new { @id = "updatePForm" }))
{
    
   @Html.ValidationSummary(true)
    
      
                 
   
    <div class="editor-label">
    Title <span class="red">*</span>
    </div>
    
    @Html.HiddenFor(model=>model.ID)
                  
    <div class="editor-field">
        @Html.EditorFor(model => model.Btitle)
        @Html.ValidationMessageFor(model => model.Btitle)
    </div>
    
    
      <div class="editor-label">
      Type 
    </div>
                  
    <div class="editor-field">
        @Html.EditorFor(model => model.Btype)
        @Html.ValidationMessageFor(model => model.Btype)
    </div>

    
    
      <div class="editor-label">
     URL <span class="red">*</span>
    </div>
                  
    <div class="editor-field">
        @Html.EditorFor(model => model.url)
        @Html.ValidationMessageFor(model => model.url)
    </div>

    
      <div class="editor-label">
        @Html.LabelFor(model => model.Description)
    </div>
                  
    <div class="editor-field">
        @Html.TextAreaFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
    </div>
    
    }

