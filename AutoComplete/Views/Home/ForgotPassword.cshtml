@model AutoComplete.Models.Person

@{
    ViewBag.Title = "ForgotPassword";
}

@section bottomText
{
 <div class="page">
        <div class="grid">
            <div class="row">
                <div class="span4 bg-color-blue">
                    <img src="@Url.Content("~/img/simple.png")" class="place-right" style="margin: 10px;">
                    <h2 class="fg-color-white">
                        &nbsp;Simple</h2>
                </div>
                <div class="span4 bg-color-green">
                    <img src="@Url.Content("~/img/manageable.png")" class="place-right" style="margin: 10px;">
                    <h2 class="fg-color-white">
                        &nbsp;Manageable</h2>
                </div>
                <div class="span4 bg-color-yellow">
                    <img src="@Url.Content("~/img/custom.png")" class="place-right" style="margin: 10px;">
                    <h2 class="fg-color-white">
                        &nbsp;Customaziable</h2>
                </div>
            </div>
        </div>
    </div>
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h1>Forgot <small>Password </small></h1>

<form method="post" action="/Home/ForgotPassword">

<div class="grid">
            <div class="row hero-unit">
                <div class="span5">
                    <p style="line-height: 20px; font-size: 14px; position: relative; margin-right: 10px;
                        text-align: justify;">
                        Please enter Email Address.
                    </p>
               
                        
                           
                    
                        
                        <div class="group wat-cf">
                            <div>
                             Email
                            </div>
                              <div class="editor-field">
              <input  class="form_input validate[required] text-input" data-val="true" id="Email" name="Email"
            type="text" value="@Html.DisplayFor(model => model.Email)" />
        <span class="field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true">
        </span>
            </div>
                        </div>
                        
                        
                        
                        
                        
                        <div class="group navform wat-cf">
                            <div class="right">
                                <input style="margin-left:5px;" class="btn btn-primary btn-large" type="submit" value="submit" />
                            </div>
                        </div>
                 
                </div>
                <div class="span6">
                    <div class="span6  text-center place-left bg-color-blue fg-color-white" id="sponsorBlock">
                        <br>
                        <br>
                        <h2 class="">
                            Locum Assistant</h2>
                        <p class="">
                            10+ <a class="" href="#">users</a> Locum Assistant</p>
                        <br>
                        <a href="#">
                            <h1>
                                <i class="icon-arrow-right-3 fg-color-red"></i>
                            </h1>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </form>




